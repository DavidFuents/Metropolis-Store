<%= form_for @product do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name, value: f.object.name%>
  
  <%= f.label :price %>
  <%= f.number_field :price, value: number_to_currency(f.object.amount.to_f, delimiter: '', unit: ''), step: :any %>
  
  <%= f.label :category_id %>
  <%= f.number_field :category_id %>

  <%= f.submit %>
<% end %>

