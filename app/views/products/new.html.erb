<%= form_for @product, url: collection_products_path(@product.collection_id) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name, value: f.object.name%>
  
  <%= f.label :price %>
  <%= f.number_field :price %>
 
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>

  <%= f.submit %>
<% end %>

