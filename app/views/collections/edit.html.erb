<h1>Editing <%= @collection.name %></h1>

<%= form_for @collection do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.submit "Update Collection" %>
<% end %>
<%= button_to "Delete Collection", collection_path(@collection), method: :delete %>

<h2>Products</h2>
<ul>
<% @collection.products.each do |product| %>
    <li><%= link_to product.name, edit_collection_product_path(@collection, product.id) %></li>
<% end %>
</ul>
<%= link_to "Add Product", new_collection_product_path(@collection) %>
